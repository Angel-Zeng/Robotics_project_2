@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 buttons-container">
            <!-- Play Button (No text, not a link) -->
            <button class="nav-link @playButtonClass" @onclick="PlayButtonClicked">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-play-fill" viewBox="0 0 16 16">
                    <path d="m11.596 8.697-6.363 3.692c-.54.313-1.233-.066-1.233-.697V4.308c0-.63.692-1.01 1.233-.696l6.363 3.692a.802.802 0 0 1 0 1.393"/>
                </svg>
            </button>

            <!-- Pause Button (No text, not a link) -->
            <button class="nav-link @pauseButtonClass" @onclick="PauseButtonClicked">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pause-fill" viewBox="0 0 16 16">
                    <path d="M5.5 3.5A1.5 1.5 0 0 1 7 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5m5 0A1.5 1.5 0 0 1 12 5v6a1.5 1.5 0 0 1-3 0V5a1.5 1.5 0 0 1 1.5-1.5"/>
                </svg>
            </button>

            <!-- Battery Icon moved to the far right -->
            <NavLink class="nav-link" href="battery">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-battery-full" viewBox="0 0 16 16">
                    <path d="M2 6h10v4H2z" />
                    <path
                        d="M2 4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm10 1a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1zm4 3a1.5 1.5 0 0 1-1.5 1.5v-3A1.5 1.5 0 0 1 16 8" />
                </svg>
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<!-- Add CSS to style the buttons container and icons -->
<style>
    .buttons-container {
        display: flex;
        gap: 20px; /* Adjust space between buttons */
        align-items: center; /* Vertically center icons */
        width: 100%; /* Full width for the container */
    }

    .top-row {
        margin-bottom: 0; /* Remove bottom margin from top row */
    }

    .nav-link svg {
        font-size: 24px; /* Size of the icons */
    }

    /* Push the battery icon to the far right */
    .buttons-container .nav-link:last-child {
        margin-left: auto;
    }

    /* Button color when active */
    .active-button {
        background-color: #007bff; /* Blue background for active button */
        color: white; /* White icon color */
    }

    /* Default button styling */
    .nav-link {
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
    }
</style>

@code {
    private string playButtonClass = string.Empty; // Default style for play button
    private string pauseButtonClass = string.Empty; // Default style for pause button

    private void PlayButtonClicked()
    {
        // Set the active class for the play button and remove it from pause button
        playButtonClass = "active-button";
        pauseButtonClass = string.Empty;

        // Handle play button click logic here (if needed)
    }

    private void PauseButtonClicked()
    {
        // Set the active class for the pause button and remove it from play button
        pauseButtonClass = "active-button";
        playButtonClass = string.Empty;

        // Handle pause button click logic here (if needed)
    }
}
